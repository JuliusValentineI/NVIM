set number
set relativenumber
set numberwidth=5
set colorcolumn=20

set mouse=a
set clipboard=unnamed

syntax on
set showcmd
set ruler

set cursorline
set encoding=UTF-8
set showmatch
set sw=2

set autoindent

" Nvim Script
set colorcolumn=100
set cc=100

" theme
let g:gruvbox_contrast_dark="hard"
set background=dark
colorscheme gruvbox
let g:airline_theme='minimalist'

set laststatus=2
set noshowmode

set ignorecase
set hlsearch
set incsearch
set smartcase
